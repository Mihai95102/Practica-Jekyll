    mysql <span class="nt">-u</span> root <span class="o">&lt;&lt;&lt;</span> <span class="s2">"GRANT ALL PRIVILEGES ON *.* TO </span><span class="nv">$DB_USER</span><span class="s2">@'%'"</span>

